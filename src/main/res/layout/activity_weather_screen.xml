<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BetterApp"
    android:id="@+id/weatherScreen" >


    <ImageView
        android:id="@+id/weatherBackdrop"
        android:layout_width="match_parent"
        android:contentDescription="@string/weatherBackdropDesc"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/sun_background" />

    <TextView
        android:id="@+id/weatherReport"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="@string/loadingReport"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

